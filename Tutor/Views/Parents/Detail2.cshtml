<div class="caseTitle">老師資訊</div>
<div class="caseDetail">
    <div class="name divborder">
        <div class="title">老師姓名</div>
        <div class="Detail">@Model.ParentsIndexDetail.name</div>
    </div>
    <div class="gender divborder">
        <div class="title">老師性別</div>
        <div class="Detail">@Model.ParentsIndexDetail.gender</div>
    </div>

    <div class="subject divborder">
        <div class="title">教學科目</div>
        <div class="Detail">@Model.ParentsIndexDetail.subject</div>
    </div>
    <div class="school divborder">
        <div class="title">最高學歷</div>
        <div class="Detail">@Model.ParentsIndexDetail.school &nbsp @Model.ParentsIndexDetail.department</div>
    </div>
    <div class="sub_department divborder">
        <div class="title">雙主修/輔系</div>
        <div class="Detail">@Model.ParentsIndexDetail.sub_department</div>
    </div>
    <div class="introduction divborder">
        <div class="title">自我介紹</div>
        <div class="Detail">@Model.ParentsIndexDetail.introduction</div>
    </div>
    <div class="motivation ">
        <div class="title">教學動機</div>
        <div class="Detail">@Model.ParentsIndexDetail.motivation</div>
    </div>

</div>
<div class="connectionTitle">聯絡方式</div>
    <div class="connectionDetail ">
        <div class="phone ">
            <div class="title">電話</div>
            <div class="Detail">@Model.ParentsIndexDetail.telephone</div>
        </div>
        @*<div class="email divborder">
            <div class="title">電子信箱</div>
            <div class="Detail">@Model.ParentsIndexDetail.googleaccount</div>
        </div>*@
    </div>

